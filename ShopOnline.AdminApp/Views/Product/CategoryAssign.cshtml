@model ShopOnline.ViewModels.Catalog.Categories.CategoryAssignRequest

@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gán danh mục sản phẩm</h1>
<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Gán danh mục sản phẩm</li>
    </ol>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CategoryAssign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                @for (var i = 0; i < Model.Categories.Count; i++)
                {
                    <div class="form-group">
                        <label>
                            @Model.Categories[i].Name

                            <input asp-for="Categories[i].Selected" type="checkbox" />
                            <input asp-for="Categories[i].Id" type="hidden" />
                            <input asp-for="Categories[i].Name" type="hidden" />

                        </label>
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

