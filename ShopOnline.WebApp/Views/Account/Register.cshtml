    <form asp-action="Register" asp-controller="Account" method="post">
        <h4><localize>Your personal information</localize></h4>
        <div asp-validation-summary="All" class="text-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputFname1"><localize>First name</localize>  <sup>*</sup></label>
            <div class="controls">
                <input type="text" asp-for="firstName">
                <span asp-validation-for="firstName" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputLnam"><localize>Last name </localize><sup>*</sup></label>
            <div class="controls">
                <input type="text" asp-for="lastName">
                <span asp-validation-for="lastName" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputLnam"><localize>BirthDay</localize><sup>*</sup></label>
            <div class="controls">
                <input type="date" asp-for="Dob">
                <span asp-validation-for="Dob" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input_email">Email<sup>*</sup></label>
            <div class="controls">
                <input type="text" asp-for="Email">
                <span asp-validation-for="Email" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input_email"><localize>Phone Number</localize><sup>*</sup></label>
            <div class="controls">
                <input type="text" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input_email"><localize>UserName</localize><sup>*</sup></label>
            <div class="controls">
                <input type="text" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword1"><localize>Password</localize> <sup>*</sup></label>
            <div class="controls">
                <input type="password" asp-for="PassWord">
                <span asp-validation-for="PassWord" class="text-error"></span>

            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword1"><localize>Confirm Password </localize><sup>*</sup></label>
            <div class="controls">
                <input type="password" asp-for="ConfirmPassWord">
                <span asp-validation-for="ConfirmPassWord" class="text-error"></span>

            </div>
        </div>


        <div class="control-group">
            <label class="control-list" margin-left="50px"> <localize>By clicking Sign Up, you agree to our Terms, Data Policy.</localize></label>

        </div>


        <div class="control-group">
            <div class="controls">
                <input type="hidden" name="email_create" value="1">
                <input type="hidden" name="is_new_customer" value="1">
                <button class="btn-primary" type="submit" value="register"><localize>Register</localize></button>
            </div>
        </div>
    </form>
</div>

